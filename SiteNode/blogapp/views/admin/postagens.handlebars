<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add" <button class="btn btn-success">Nova postagen</button> </a>

{{#each postagens}}
<div class="card">
    <div class="card-body">
        <h4>Tutulo: {{titulo}} </h4> <br>
        <p>Descrição: {{descricao}}</p> <br>
        <small>Data: {{data}}</small> <br>
        <small>Categoria: {{categoria.nome}}</small><br>
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar Postagens</button></a>
        <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-3">Deletar Postagens</button></a>


    </div>
</div>
{{else}}
<p>Nenhuma postagem registrada</p>
{{/each}}